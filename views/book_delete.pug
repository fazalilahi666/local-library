extends layout

block content
  h1 #{title}: #{book.name}
    
  if book_copies.length
  
    p #[strong Delete the following book copies before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book copies
    
      dl
      each book in book_copies
        dt 
          a(href=book.url) #{book.book.title}
        dd #{book.imprint}

  else
    p Do you really want to delete this book?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete